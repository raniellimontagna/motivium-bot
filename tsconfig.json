{
  "compilerOptions": {
    // General options
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,

    // Language and environment options
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Linting options
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,

    // Output Options
    "outDir": "./build",
    "rootDir": "./src",

    // Path mapping Options
    "baseUrl": "./src",
    "paths": {
      "#database": ["./database/index.ts"],
      "#base": ["./discord/base/index.ts"],
      "#schedulers": ["./discord/schedulers/index.ts"],
      "#utils": ["./discord/utils/index.ts"],
      "#libs": ["./libs/index.ts"],
      "#services": ["./services/index.ts"],
      "#functions": ["./functions/index.ts"],
      "#menus": ["./menus/index.ts"],
      "#settings": ["./settings/index.ts"],
      "#tools": ["./tools/index.ts"],
      "#server": ["./server/index.ts"],
      "#lib": ["./lib/index.ts"],
      "#emojis": ["../emojis.json"],
      "#types/*": ["./@types/*"]
    },

    // Additional options
    "types": ["vitest/globals", "node"]
  },

  // Include and Exclude Options
  "include": ["src"],
  "exclude": ["node_modules"]
}
