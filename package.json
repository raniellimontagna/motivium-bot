{
  "name": "motivium-bot",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "check": "tsc --noEmit && echo âœ” Ok",
    "build": "tsc",
    "dev": "tsx --env-file .env ./src/index.ts",
    "dev:dev": "tsx --env-file .env.dev ./src/index.ts",
    "watch": "tsx --watch --env-file .env ./src/index.ts",
    "watch:dev": "tsx --watch --env-file .env.dev ./src/index.ts",
    "start": "node --env-file .env .",
    "start:dev": "node --env-file .env.dev .",
    "start:migrate:prod": "prisma migrate deploy --schema=./prisma/schema.prisma && node build/index.js",
    "prestart": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "postinstall": "prisma generate --schema=./prisma/schema.prisma",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@google/genai": "1.41.0",
    "@magicyan/discord": "1.6.0",
    "@prisma/client": "6.17.1",
    "axios": "^1.13.5",
    "chalk": "5.6.2",
    "dayjs": "^1.11.19",
    "discord.js": "14.25.1",
    "fast-glob": "3.3.3",
    "handlebars": "4.7.8",
    "he": "1.2.0",
    "node-cache": "5.1.2",
    "node-cron": "^4.2.1",
    "node-html-to-image": "5.0.0",
    "openai": "6.22.0",
    "prisma": "6.17.1",
    "puppeteer": "24.37.3",
    "rou3": "0.7.12",
    "rss-parser": "3.13.0",
    "telegram": "2.26.22",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/he": "1.2.3",
    "@types/node": "22.13.14",
    "@types/node-cron": "^3.0.11",
    "@vitest/coverage-v8": "3.2.4",
    "axios-mock-adapter": "2.1.0",
    "dotenv": "16.4.7",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.0.0",
    "prettier": "^3.8.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "7.3.1",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "^3.2.4"
  },
  "imports": {
    "#database": "./src/database/index.ts",
    "#base": "./src/discord/base/index.ts",
    "#discord": "./src/discord/index.ts",
    "#schedulers": "./src/discord/schedulers/index.ts",
    "#services": "./src/services/index.ts",
    "#libs": "./src/libs/index.ts",
    "#utils": "./src/discord/utils/index.ts",
    "#functions": "./src/functions/index.ts",
    "#menus": "./src/menus/index.ts",
    "#settings": "./src/settings/index.ts",
    "#tools": "./src/tools/index.ts",
    "#server": "./src/server/index.ts",
    "#lib": "./src/lib/index.ts"
  }
}
